<div class="container">
  <div class="row header">
    <div class="col-md-4">
      <h1 class="title">
        <a href="/">{{t title.title}}</a> <small class="mutted">{{t label.version}}</small>
      </h1>
    </div>

    <div class="col-md-5 search-field">
      <div class="form-inline">
        {{view App.SearchField action="search" target="controller"
              valueBinding="view.search"
              class="form-control input-sm search-input" viewName="textField"}}
        {{view App.SearchButton action="search" target="controller"
              class="btn btn-default btn-sm"}}
      </div>
    </div>

    {{#unless isAnonymous}}
      {{#unless App.properties.isAuthorized}}
        <div class="col-md-3 signin-toolbar">
          {{#link-to 'signin'}}{{t label.signin}}{{/link-to}}
          or
          {{#link-to 'signup'}}{{t label.signup}}{{/link-to}}
        </div>
      {{/unless}}
    {{/unless}}
  </div>


  <div class="row">
    <div class="col-md-9">
      <div class="content">
	    <div class="box">
  	      <div class="box-header-timeline">CHANGE ME</div>
		    <div class="box-body">
              {{outlet}}
			</div>
	      </div>
      </div>
    </div>

    <div class="col-md-3 sidebar">
      {{#if App.properties.userId}}
        <div class="logged">
          <div class="logged_avatar">
            <img class="media-object" src="/img/48x48.png">
          </div>

          <div class="logged_user">
            <div class="author">
              {{#link-to 'user' App.properties.username}}{{App.properties.screenName}}{{/link-to}}
            </div>
            <div>
              {{#unless view.isAnonymous}}
                {{#link-to 'settings' App.properties.userId}}{{t label.settings}}{{/link-to}} -
              {{/unless}}
                {{#link-to 'logout'}}{{t label.signout}}{{/link-to}}</a>
            </div>
          </div>
        </div>
      {{/if}}

      <div class="box">
        <div class="box-header-groups">
          {{t header.groups}}
        </div>
        <div class="box-body">
          {{view App.GroupsView}}
        </div>
        <div class="box-footer">
          {{#link-to 'groups'}}{{t label.createGroup}}{{/link-to}}
        </div>
      </div>

      <div>
        <h5>{{t header.tags}}</h5>

        {{view App.Tags}}
      </div>

    </div>
  </div>

  <div class="row">
    <div class="col-md-9">
      <hr/>
      <footer>{{t message.footer}}</footer>
    </div>
  </div>
</div>
