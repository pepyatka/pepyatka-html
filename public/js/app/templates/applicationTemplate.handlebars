<div class="container">
  <div class="row">
    <div class="col-md-4">
        <div class="header">
      <h1 class="title">
       {{#link-to 'timeline.home' (query-params offset=0)}}Pepyatka{{/link-to}} <small class="mutted">0.1.0</small>
      </h1>
        </div>
    </div>

    <div class="col-md-8">
      <div class="row">
        <div class="col-md-6 search-field">
          <div class="form-inline">
            <input class="form-control input-sm search-input" />
            <button class="btn btn-default btn-sm">Search</button>
          </div>
        </div>

        <div class="col-md-6">
          {{#unless controller.session.signedIn}}
              <div class="signin-toolbar">
                {{#link-to 'session.new'}}Sign In{{/link-to}}
                  or
                {{#link-to 'users.new'}}Sign Up{{/link-to}}
              </div>
          {{/unless}}
        </div>


      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-9">
      <div class="content">
        <div class="box">
          <div class="box-header-timeline">
            Home
          </div>
          <div class="box-body">
            {{outlet}}
          </div>
          <div class="box-footer">

          </div>
        </div>
      </div>
    </div>

    <div class="col-md-3 sidebar">
      {{#if controller.session.signedIn}}
        <div class="logged">
          <div class="logged-avatar">
            {{#link-to 'timeline.index' controller.session.currentUser.username (query-params offset=0)}}<img class="media-object" src="/img/48x48.png">{{/link-to}}
          </div>

          <div class="logged-user">
            <div class="author">
              {{#link-to 'timeline.index' controller.session.currentUser.username (query-params offset=0)}}{{controller.session.currentUser.screenName}}{{/link-to}}
            </div>
            <div>
              {{#link-to 'settings.index'}}settings{{/link-to}}
              -
              {{#link-to 'session.destroy'}}log out{{/link-to}}
            </div>
          </div>
        </div>
      {{/if}}

      <div class="box">
        <div class="box-header-friends">
          Friends
        </div>
        <div class="box-body">
          <ul>
            <li>{{#link-to 'timeline.home'}}Home{{/link-to}}</li>
            <li><a href="#">Direct messages</a></li>
            <li>{{#link-to 'timeline.discussions'}}My discussions{{/link-to}}</li>
          </ul>
        </div>
        <div class="box-footer">
          {{#link-to 'timeline.subscriptions' controller.session.currentUser.username}}Browse/edit friends{{/link-to}}
        </div>
      </div>

      <div class="box">
        <div class="box-header-groups">
          Groups
        </div>
        <div class="box-body">
          {{view 'my-groups'}}
        </div>
        <div class="box-footer">
          {{#link-to 'groups.home'}}Browse/edit groups{{/link-to}}
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-9">
      <footer>Footer</footer>
    </div>
  </div>
</div>
