<div class="col-md-12">
  <h2>Sign up</h2>

  {{#if errors}}
    <div class="alert alert-danger" role="alert">
      <span>Error:</span>
      <span id="error-message">{{errors}}</span>
    </div>
  {{/if}}

  <div class="row">
    <div class="col-md-6">
      <form action="/session" method="post">
        <div class="form-group">
          <label for="username">Username</label>
          {{input id="username" value=username type="text" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          {{input id="password" value=password type="password" class="form-control"}}
        </div>

        <div class="form-group">
          <button {{action "signup"}} class="btn btn-default">Sign Up</button>
        </div>
      </form>
    </div>
  </div>
</div>
