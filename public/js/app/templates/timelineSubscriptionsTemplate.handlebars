<h3 class="p-timeline-subscription-users-header">Users</h3>
<ul>
  {{#each subscription in model}}
    {{#if subscription.isPosts}}
      {{#if subscription.user.isUser}}
        <li class="p-timeline-subscription-user">
          {{#link-to 'timeline.index' subscription.user.username}}
            <div class="avatar">
              <img src="/img/48x48.png" />
            </div>

            {{subscription.user.screenName}}
          {{/link-to}}
        </li>
      {{/if}}
    {{/if}}
  {{/each}}
</ul>

<h3 class="p-timeline-subscription-groups-header">Groups</h3>
<ul>
  {{#each subscription in model}}
    {{#if subscription.isPosts}}
      {{#if subscription.user.isGroup}}
