{{breadcrumbs-view steps="Subscriptions" user=content.query}}

<h3 class="p-timeline-subscription-users-header">Friends</h3>
<ul class="tile-list">
  {{#each model as |subscription|}}
    {{#if subscription.isPosts}}
      {{#if subscription.user.isUser}}
        <li class="p-timeline-subscription-user">
          {{#link-to 'timeline.index' subscription.user.username (query-params offset=0)}}
            <div class="avatar">
              <img src="{{ subscription.user.profilePictureMedium }}" />
            </div>

            {{subscription.user.screenNameOrYou}}
          {{/link-to}}
        </li>
      {{/if}}
    {{/if}}
  {{/each}}
</ul>

<h3 class="p-timeline-subscription-groups-header">Groups</h3>
<ul class="tile-list">
  {{#each model as |subscription|}}
    {{#if subscription.isPosts}}
      {{#if subscription.user.isGroup}}
        <li class="p-timeline-sunsctiption-group">
          {{#link-to 'timeline.index' subscription.user.username (query-params offset=0)}}
            <div class="avatar">
              <img src="{{ subscription.user.profilePictureMedium }}" />
            </div>

            {{subscription.user.screenNameOrYou}}
          {{/link-to}}
        </li>
      {{/if}}
    {{/if}}
  {{/each}}
</ul>
