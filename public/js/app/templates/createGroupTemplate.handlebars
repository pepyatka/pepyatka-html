<h2>{{t header.createGroup}}</h2>
  <div class="col-md-6">
    <form action="/signup" method="post" class="form-horizontal">
      <div class="form-group">
        <label for="username">Group name</label>
          {{view Ember.TextField classNames="form-control" valueBinding="name" type="text" id="name" name="name"}}
      </div>

      <div class="form-group">
          <button {{action submit}} class="btn btn-primary">{{t button.create}}</button>
      </div>
    </form>
  </div>
