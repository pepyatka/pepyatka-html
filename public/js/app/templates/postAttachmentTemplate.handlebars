<div class="attachment">
  <a href="{{attachment.model.url}}" title="{{attachment.model.id}}" class="p-attachment-url">
    {{#if attachment.model.thumbnailUrl}}
      <img class="p-attachment-thumbnail" src="{{attachment.model.thumbnailUrl}}" alt="{{attachment.model.id}}" />
    {{else}}
      {{attachment.model.id}}
    {{/if}}
  </a>
</div>
