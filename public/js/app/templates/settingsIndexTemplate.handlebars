<div class="form-group p-settings-screenname">
  <label for="screenName">Screen name:</label>
  {{input name="screenName" value=screenName class="form-control" id="screenName"}}
</div>

<div class="form-group p-settings-email">
  <label for="email">Email:</label>
  {{input name="email" id="email" value=content.email class="form-control"}}
</div>

<div class="checkbox p-settings-private">
  <label>
    {{input type="checkbox" name="isPrivate" checked=content.isPrivateUser}}
    Private feed
    <small>(only let people I approve see my feed)</small>
  </label>
</div>

<p>
  <button {{action 'update'}} class="btn btn-default p-settings-update">Update</button>
</p>

{{#if message}}
  <div class="alert alert-info p-settings-alert" role="alert">
    <span id="error-message">{{message}}</span>
  </div>
{{/if}}

{{#if errors}}
  <div class="alert alert-danger p-settings-message" role="alert">
    <span id="error-message">{{errors}}</span>
  </div>
{{/if}}

<hr/>

<h2 class="p-settings-changepassword-header">Change password</h2>

<div class="form-group p-settings-currentpassword">
  <label for="currentPassword">Current password:</label>
  {{input name="currentPassword" id="currentPassword" type="password" value=currentPassword class="form-control"}}
</div>

<div class="form-group p-settings-newpassword">
  <label for="password">New password:</label>
  {{input name="password" id="password" type="password" value=password class="form-control"}}
</div>

<div class="form-group p-settings-confirmpassword">
  <label for="passwordConfirmation">Confirm password:</label>
  {{input name="passwordConfirmation" id="passwordConfirmation" type="password" value=passwordConfirmation class="form-control"}}
</div>

<p>
  <button {{action 'updatePassword'}} class="btn btn-default p-settings-updatepassword">Update Password</button>
</p>

{{#if passwordMessage}}
  <div class="alert alert-info p-settings-alert" role="alert">
    <span id="error-message">{{passwordMessage}}</span>
  </div>
{{/if}}

{{#if passwordErrors}}
  <div class="alert alert-danger p-settings-message" role="alert">
    <span id="error-message">{{passwordErrors}}</span>
  </div>
{{/if}}

<h2 class="p-settings-updateprofilepicture-header">Update Profile Picture</h2>

<div class="form-group">
  {{view 'update-profile-picture'}}
</div>

<p>
  <button {{action 'updateProfilePicture'}} class="btn btn-default p-settings-updateprofilepicture">Update</button>
</p>

{{#if profilePicErrors}}
    <div class="alert alert-danger p-settings-message" role="alert">
        <span id="error-message">{{profilePicErrors}}</span>
    </div>
{{/if}}

<div class="form-group p-settings-themeselector">
  <label for="theme-selector">Theme:</label>
  {{view 'theme-selector' content=themes value=theme}}
</div>
