<div class="container">
  <div class="row header-row">
    <div class="col-md-4">
      <div class="header">
        <h1 class="title">
          {{#link-to 'timeline.home' (query-params offset=0)}}Pepyatka{{/link-to}} <small class="mutted">0.1.0</small>
        </h1>
      </div>
    </div>

    <div class="col-md-8">
      <div class="row">
        <div class="col-md-6 search-field">
          <div class="form-inline">
            <!-- input class="form-control input-sm search-input p-search-input" / -->
            <!-- button class="btn btn-default btn-sm p-search-action">Search</button -->
          </div>
        </div>

        <div class="col-md-6">
          {{#unless controller.session.signedIn}}
            <div class="signin-toolbar">
              {{#link-to 'session.new'}}Sign In{{/link-to}}
            </div>
          {{/unless}}
        </div>


      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="content">
        <div class="box">
          <div class="box-header-timeline">
            Home
          </div>
          <div class="box-body">
            {{yield}}
          </div>
          <div class="box-footer">

          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      {{view 'footer'}}
    </div>
  </div>
</div>
